	    LD_SWITCH_X_SITE="$OLD_LD_SWITCH_X_SITE"
	    C_SWITCH_X_SITE="$OLD_C_SWITCH_X_SITE"
	    CPPFLAGS="$OLD_CPPFLAGS"
	    LIBS="$OLD_LIBS"
	    AC_VERBOSE(no)
